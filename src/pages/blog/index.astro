---
import Layout from "../../components/Layout.astro";
import bgImage from "../../images/Vectorial.jpg";

const posts = await Astro.glob("./posts/*.md");
---

<Layout
	pageTitle="Blog de Desarrollo"
	pageDescription="Tutoriales de desarrollo y programacion"
>
	<h1>Blog</h1>

	<img width="100" src={bgImage} alt="" />

	{
		posts.map((post) => {
			return (
				<a class="link" href={post.url}>
					{post.frontmatter.title}
				</a>
			);
		})
	}

	<style>
		.link {
			background-color: rgb(72, 50, 8);
			color: white;
			text-decoration: none;
			display: block;
			margin-bottom: 4px;
		}
	</style>
</Layout>
